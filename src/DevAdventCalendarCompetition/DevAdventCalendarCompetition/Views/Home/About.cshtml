@using static DevAdventCalendarCompetition.Resources.ViewsMessages
@using System.Globalization

<div class="breadcrumb_area">
  <div class="container">
    <div class="row">
      <div class="breadcrumb_wrapper">
        <div class="page_title">
          <h3>O nas</h3>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="promot_section">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-sm-offset-2 col-md-offset-3">
        <div class="promot_content_wrapper">
          <div class="promt_content area_title">
            <h3>@ThankYou</h3>
          </div>
          <div class="gift_box">
            <img src="~/theme-2019/images/gifts_.png" alt="">
          </div>
          <div class="santa_with_bag reveal animated" data-reveal-anim="bounceIn" data-anim-delay="0.3s">
            <img src="~/theme-2019/images/santa_with_bag.png" alt="Begger_santa">
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-4">
        <div class="bags reveal animated" data-reveal-anim="fadeInRight" data-anim-delay="0.3s">
          <img src="~/theme-2019/images/gift_bag.png" alt="gifts">
        </div>
      </div>
    </div>
  </div>
</section>

<section class="pricing_area section_padding">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row person-wrapper single_pricing_block reveal animated" data-reveal-anim="fadeInRightShort">
          <div class="col-md-2 col-sm-3 person">
            <img src="~/theme-2019/images/people/joanna_lamch.jpg" alt="Joanna Lamch" width="80" class="img-responsive" />
          </div>
          <div class="col-md-10 col-sm-9">
            <div class="pricing_right al">
              <div class="price_detail">
                <div class="pricing_title">
                  <h4>Joanna lamch</h4>
                </div>
                <div class="event_info">
                  <ul>
                    <li>
                      @Html.Raw(AboutJoannaLamch)
                    </li>
                    <li>
                      <a rel="noopener noreferrer" href="https://jlamch.net" target="_blank" class="icon-social-round icofont icofont-site-map"></a>
                      <a rel="noopener noreferrer" href="https://facebook.com/jlamch" target="_blank" class="icon-social-round icofont icofont-social-facebook"></a>
                      <a rel="noopener noreferrer" href="https://www.twitter.com/jlamch" target="_blank" class="icon-social-round icofont icofont-social-twitter"></a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="row person-wrapper single_pricing_block reveal animated" data-reveal-anim="fadeInRightShort">
          <div class="col-md-2 col-sm-3 person">
            <img src="~/theme-2019/images/people/dominik_przywara.png" alt="Dominik Przywara" width="80" class="img-responsive" />
          </div>
          <div class="col-md-10 col-sm-9">
            <div class="pricing_right al">
              <div class="price_detail">
                <div class="pricing_title">
                  <h4>Dominik Przywara</h4>
                </div>
                <div class="event_info">
                  <ul>
                    <li>
                      @AboutDominikPrzywara
                    </li>
                    <li>
                      <a rel="noopener noreferrer" href="https://www.facebook.com/dominik.przywara.9" target="_blank" class="icon-social-round icofont icofont-social-facebook"></a>
                      <a rel="noopener noreferrer" href="https://twitter.com/przywaradominik" target="_blank" class="icon-social-round icofont icofont-social-twitter"></a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="row person-wrapper single_pricing_block reveal animated" data-reveal-anim="fadeInLeftShort">
          <div class="col-md-2 col-sm-3 person">
            <img src="~/theme-2019/images/people/weronika_mularczyk.jpg" alt="Weronika Mularczyk" width="80" class="img-responsive" />
          </div>
          <div class="col-md-10 col-sm-9">
            <div class="pricing_right al">
              <div class="price_detail">
                <div class="pricing_title">
                  <h4>Weronika Mularczyk</h4>
                </div>
                <div class="event_info">
                  <ul>
                    <li>
                      @Html.Raw(AboutWeronikaMularczyk)
                    </li>
                    <li>
                      <a rel="noopener noreferrer" href="https://www.programmer-girl.com" target="_blank" class="icon-social-round icofont icofont-site-map"></a>
                      <a rel="noopener noreferrer" href="https://www.facebook.com/programmergirlblog" target="_blank" class="icon-social-round icofont icofont-social-facebook"></a>
                      <a rel="noopener noreferrer" href="https://www.twitter.com/_programmergirl" target="_blank" class="icon-social-round icofont icofont-social-twitter"></a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
