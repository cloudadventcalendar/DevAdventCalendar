@using static DevAdventCalendarCompetition.Resources.ViewsMessages

<div class="donate_page">
  <section class="promot_section">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="promot_content_wrapper">
            <div class="promt_content area_title">
              <h3>@Partners</h3>
            </div>
            <div class="santa_with_bag reveal animated" data-reveal-anim="bounceIn" data-anim-delay="0.3s">
              <img src="~/theme-2019/images/gift_bag.png" alt="Begger_santa">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="container mb-100 mt-100">
    <div class="row">
      <div class="col-12 mb-30 mt-30 text-center">
        <div class="area_title mb-30">
          <h3>@DoYouWantToBePartner2020 </h3>
        </div>

        <a href="mailto:cloudadventcalendar@gmail.com" class="chris_btn reveal animated" data-reveal-anim="fadeIn">
          @ContactUs
        </a>
      </div>
    </div>
  </div>

  <div class="breadcrumb_area">
    <div class="container">
      <div class="row">
        <div class="breadcrumb_wrapper">
          <div class="page_title page_title--block text-center">
            <h3>@LastYearPartners</h3>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="event_txt">
    <div class="container">

      <div class="row">
        <div class="col text-center">
          <h1 class="mb-30">@WeeklyPartners</h1>
        </div>
      </div>

      <div class="row prizes-wrapper">
        <div class="col-sm-6 mb-30"></div>
        <div class="col-sm-6 mb-30">
          <div class="border prize-wrapper flex-column flex-fullheight">
            <a href="https://www.chmurowisko.pl/" target="_blank" class="flex-centered flex-grow" rel="noopener noreferrer">
              <img src="~/theme-2019/images/partners/chmurowisko.png" alt="Chmurowisko" title="Chmurowisko" class="img-responsive center-block" />
            </a>
          </div>
        </div>
        <div class="col-sm-6 mb-30">
          <img src="~/theme-2019/images/pinguin.png" alt="pinguin" title="pinguin" class="img-responsive center-block hidden" />
        </div>
      </div>
    </div>
  </section>

  <section class="event_txt">
    <div class="container">

      <div class="row">
        <div class="col text-center">
          <h1 class="mb-30">@PrizesPartners</h1>
        </div>
      </div>

      <div class="row prizes-wrapper">
        <div class="col-sm-4 mb-30">
          <div class="border prize-wrapper flex-column flex-fullheight">
            <a href="https://www.chmurowisko.pl/" target="_blank" class="flex-centered flex-grow" rel="noopener noreferrer">
              <img src="~/theme-2019/images/partners/chmurowisko.png" alt="chmurowisko" title="Chmurowisko" class="img-responsive center-block" />
            </a>
          </div>
        </div>
      </div>

    </div>
  </section>

  <section class="event_txt">
    <div class="container">

      <div class="row">
        <div class="col text-center">
          <h1 class="mt-30 mb-30">@MediaPartners</h1>
        </div>
      </div>

      <div class="row prizes-wrapper">

        <div class="col-sm-2 col-md-4 col-lg-4 mb-30">
          <div class="border prize-wrapper flex-column flex-centered flex-fullheight">
            <a href="https://www.meetup.com/pl-PL/%C5%9Al%C4%85ska-Grupa-Microsoft-Meetup" target="_blank" rel="noopener noreferrer">
              <img src="~/theme-2019/images/patrons/sgm.jpg" alt="sgm" title="Śląska Grupa Microsoft" class="img-responsive center-block" />
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>
</div>
